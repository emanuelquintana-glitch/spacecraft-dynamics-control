{
  "name": "spacecraft-dynamics-control",
  "version": "2.0.0",
  "type": "module",
  "description": "Advanced 3D Spacecraft Dynamics Visualization System",
  "main": "dist/main.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:e2e": "playwright test",
    "lint": "eslint src/ --ext .ts",
    "lint:fix": "eslint src/ --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "docs": "typedoc --out docs/api src/",
    "clean": "rm -rf dist node_modules",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "spacecraft",
    "dynamics",
    "3d-visualization",
    "orbital-mechanics",
    "three.js",
    "physics-simulation"
  ],
  "author": "Emanuel Quintana",
  "license": "MIT",
  "dependencies": {
    "dat.gui": "^0.7.9",
    "three": "^0.158.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.19.25",
    "@types/three": "^0.158.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vitest/ui": "^1.0.0",
    "eslint": "^8.55.0",
    "prettier": "^3.1.0",
    "ts-node": "^10.9.2",
    "typedoc": "^0.25.4",
    "typescript": "^5.9.3",
    "vite": "^5.0.0",
    "vitest": "^1.0.0"
  }
}
